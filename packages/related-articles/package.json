{
  "name": "@times-components/related-articles",
  "version": "5.2.2",
  "description": "related articles of an article",
  "main": "dist/related-articles",
  "dev": "src/related-articles",
  "scripts": {
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "depcheck": "depcheck --ignores='@thetimes/jest-lint,babel-*,depcheck,eslint,jest,prettier,react-art,webpack*' --ignore-bin-package=false --skip-missing",
    "lint": "eslint src && yarn prettier:diff && jest-lint",
    "test:android": "jest --config='./__tests__/android/jest.config.js'",
    "test:ios": "jest --config='./__tests__/ios/jest.config.js'",
    "test:web": "jest --config='./__tests__/web/jest.config.js'",
    "test:all": "yarn test:android --coverage && yarn test:ios --coverage && yarn test:web --coverage",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "NODE_ENV=production webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "related-articles",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-react-display-name": "7.0.0",
    "@thetimes/jest-lint": "*",
    "@times-components/eslint-config-thetimes": "0.8.8",
    "@times-components/jest-configurator": "2.1.17",
    "@times-components/jest-serializer": "3.1.10",
    "@times-components/storybook": "3.1.26",
    "@times-components/tealium-utils": "0.7.8",
    "@times-components/test-utils": "2.0.3",
    "@times-components/webpack-configurator": "2.0.14",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^23.4.2",
    "babel-loader": "8.0.4",
    "depcheck": "0.6.9",
    "enzyme": "3.6.0",
    "eslint": "5.9.0",
    "jest": "23.6.0",
    "jest-styled-components": "6.3.1",
    "metro-react-native-babel-preset": "0.49.2",
    "mockdate": "2.0.2",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-art": "16.5.2",
    "react-dom": "16.5.2",
    "react-native": "0.55.4",
    "react-native-web": "0.11.0",
    "react-test-renderer": "16.5.2",
    "webpack": "4.22.0",
    "webpack-cli": "3.1.2"
  },
  "dependencies": {
    "@times-components/article-summary": "3.3.6",
    "@times-components/card": "4.2.22",
    "@times-components/context": "0.5.13",
    "@times-components/link": "3.1.14",
    "@times-components/markup-forest": "1.2.5",
    "@times-components/slice": "3.1.14",
    "@times-components/styleguide": "3.9.0",
    "@times-components/tracking": "2.2.7",
    "lodash.get": "4.4.2",
    "prop-types": "15.6.2"
  },
  "peerDependencies": {
    "react": ">=16.5",
    "react-dom": ">=16.5",
    "react-native": ">=0.55",
    "react-native-web": "0.11.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
